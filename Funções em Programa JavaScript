// Função tradicional sem parâmetros
function saudacao() {
  console.log("Olá, bem-vindo à calculadora!");
}

// Função tradicional com parâmetros e retorno de valor
function soma(a, b) {
  return a + b;
}

// Arrow function com parâmetros e retorno de valor
const subtracao = (a, b) => a - b;

// Função principal
function calculadora() {
  saudacao();
  const num1 = 10;
  const num2 = 5;
  
  console.log("Soma:", soma(num1, num2));
  console.log("Subtração:", subtracao(num1, num2));
}

// Executa a função principal da calculadora
calculadora();
